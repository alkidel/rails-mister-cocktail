<div class="container">
  <h1><%= @cocktail.name %></h1>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %><%= dose.ingredient.name %><%= link_to 'Delete', cocktail_dose_path(@cocktail, dose), method: :delete %></li>
    <% end %>
  </ul>

  <h2><%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail) %>
  <div>
    <h2><%= link_to "Back to list of cocktails", cocktails_path, class: "btn btn-primary" %></h2>
  </div>
</div>

